<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- eggs that do not care about cold and heat, but they burn -->
	<ThingDef Abstract="True" Name="EggFertAvesome" ParentName="EggBase" >
    <tickerType>Normal</tickerType>
    <ingestible>
      <preferability>DesperateOnly</preferability>
    </ingestible>
    <thingCategories>
      <li>EggsFertilized</li>
    </thingCategories>
   <comps>
      <li Class="CompProperties_TemperatureRuinable">
        <minSafeTemperature>-1200</minSafeTemperature>
        <maxSafeTemperature>1200</maxSafeTemperature>
        <progressPerDegreePerTick>0.00003</progressPerDegreePerTick>
      </li>
    </comps>
  </ThingDef>

  <!-- not Cobra -->
  
  <ThingDef ParentName="EggFertAvesome">
	  
    <defName>PotatoKingEgg</defName>
    <label>Potatoking egg</label>
    <description>A fertilized cobra egg. If all goes well, it should hatch into a baby cobra. It can be eaten raw, but it's much better cooked.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Item/Resource/AnimalProductRaw/FloranEgg</texPath>
      <color>(184, 134, 11)</color>
		<!--92,136,19-->
		<drawSize>1</drawSize>
    </graphicData>
	  <statBases>
		  <Mass>1.15</Mass>
		  <MaxHitPoints>120</MaxHitPoints>
		  <DeteriorationRate>1</DeteriorationRate>
		  <Flammability>1</Flammability>
		  <Nutrition>3</Nutrition>
		  <FoodPoisonChanceFixedHuman>0.02</FoodPoisonChanceFixedHuman>
	      <MarketValue>60.0</MarketValue>
    </statBases>
    <comps>
		<li Class="CompProperties_Hatcher">
			<hatcherDaystoHatch>12.5</hatcherDaystoHatch><!--6-->
			<hatcherPawn>PotatoKing</hatcherPawn>
		</li>
	  </comps>
  </ThingDef>

	<!-- not Cobra 2 -->

	<ThingDef ParentName="EggFertAvesome">

		<defName>RicemonkeyEgg</defName>
		<label>Ricemonkey egg</label>
		<description>A fertilized cobra egg. If all goes well, it should hatch into a baby cobra. It can be eaten raw, but it's much better cooked.</description>
		<possessionCount>1</possessionCount>
		<graphicData>
			<texPath>Things/Item/Resource/AnimalProductRaw/FloranEgg</texPath>
			<color>(70, 185, 122)</color>
			<drawSize>0.2</drawSize>
		</graphicData>
		<statBases>
			<Mass>0.10</Mass>
			<MaxHitPoints>120</MaxHitPoints>
			<DeteriorationRate>1</DeteriorationRate>
			<Flammability>1</Flammability>
			<Nutrition>0.25</Nutrition>
			<FoodPoisonChanceFixedHuman>0.02</FoodPoisonChanceFixedHuman>
			<MarketValue>15.0</MarketValue>
		</statBases>
		<comps>
			<li Class="CompProperties_Hatcher">
				<hatcherDaystoHatch>6.5</hatcherDaystoHatch><!--3-->
				<hatcherPawn>Ricemonkey</hatcherPawn>
			</li>
		</comps>
	</ThingDef>
  
</Defs>
